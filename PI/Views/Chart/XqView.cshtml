
@{
    Layout = null;
}
@{ 
    var depname = ViewBag.Depname;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>部门详情数据</title>
    <script type="text/javascript" src="../../chartall/js/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="../../chartall/css/comon0.css">
</head>
<script>
    $(window).on('load', function () {
        $(".loading").fadeOut()
        var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
        $('.tbl-header').css({ 'padding-right': scrollWidth });
    });
  


/****/
$(document).ready(function(){
	var whei=$(window).width()
	$("html").css({fontSize:whei/20})
	$(window).resize(function(){
		var whei=$(window).width()
	 $("html").css({fontSize:whei/20})
});
	});
</script>
<script type="text/javascript" src="../../chartall/js/echarts.min.js"></script>
<body>
    <div class="canvas" style="opacity: .2">
        <iframe frameborder="0" src="../../chartall/load.html" style="width: 100%; height: 100%"></iframe>
    </div>
    <div class="loading">
        <div class="loadbox"> <img src="../../chartall/picture/loading.gif"> 页面加载中... </div>
    </div>
    <div class="head">
        <h1>提案改善部门数据-<span id="realdep" style="color:white">@depname</span></h1>
        <div class="weather"><span id="showTime"></span></div>

        <script>
var t = null;
    t = setTimeout(time,1000);//開始运行
    function time()
    {
       clearTimeout(t);//清除定时器
       dt = new Date();
		var y=dt.getFullYear();
		var mt=dt.getMonth()+1;
		var day=dt.getDate();
       var h=dt.getHours();//获取时
       var m=dt.getMinutes();//获取分
       var s=dt.getSeconds();//获取秒
       document.getElementById("showTime").innerHTML = y+"年"+mt+"月"+day+"-"+h+"时"+m+"分"+s+"秒";
       t = setTimeout(time,1000); //设定定时器，循环运行
    }

        </script>


    </div>
    <div class="mainbox">
        <ul class="clearfix">
            <li>
                <div class="boxall" style="height:2.8rem">
                    <div class="alltitle">提案达成率</div>
                    <div class="allnav" id="echart4"></div>
                    <div class="boxfoot"></div>
                </div>
                <div class="boxall" style="height:2.8rem">
                    <div class="alltitle">部门月度结案趋势</div>
                    <div class="allnav" id="echart1"></div>
                    <div class="boxfoot"></div>
                </div>
                <div class="boxall" style="height:2.8rem">
                    <div class="alltitle">提案分类</div>
                    <div class="allnav" id="echart2"></div>
                    <div class="boxfoot"></div>
                </div>

            </li>
            <li>
                <div class="bar">
                    <div class="barbox">
                        <ul class="clearfix">
                            <li class="pulll_left counter" id="zbval">0</li>
                            <li class="pulll_left counter" id="allval">0</li>
                        </ul>
                    </div>
                    <div class="barbox2">
                        <ul class="clearfix">
                            <li class="pulll_left">2020提案指标</li>
                            <li class="pulll_left">2020部门结案总数</li>
                        </ul>
                    </div>
                </div>
                <div class="map">
                    <div class="map1"><img src="../../chartall/picture/nlbx.png"></div>
                    <div class="map2"><img src="../../chartall/picture/jt.png"></div>
                    <div class="map3"><img src="../../chartall/picture/nmap.png"></div>
                 </div>
            </li>
            <li>
                <div class="boxall pieh" style="height:3rem">
                    <div style="height: 100%;" id="echart3"></div>
                    <div class="boxfoot"></div>
                </div>
                <div class="boxall" style="height:5.3rem">
                    <div class="alltitle">优秀提案展示</div>
                    <div class="tbl-header">
                        <table cellpadding="0" cellspacing="0" border="0">
                            <thead>
                                <tr>
                                    <th class="item1">提案名称</th>
                                    <th class="item2">分数</th>
                                    <th class="item3">完结时间</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="tbl-content">
                        <table cellpadding="0" cellspacing="0" border="0">
                            <tbody id="tablebody">
                            </tbody>
                        </table>
                    </div>
                    <div class="boxfoot"></div>
                </div>
            </li>
        </ul>
    </div>
    <script  type="text/javascript" src="../../chartall/js/zyxqbase.js"></script>
</body>
</html>

