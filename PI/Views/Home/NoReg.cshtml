@model RegisterViewModel
 
<div style="margin:20px">
    <span class="layui-breadcrumb">
        <a href="">用户管理</a>
        <a><cite>用户注册</cite></a>
    </span>
    <div class="layui-form layui-form-pane" style="margin-top:20px">
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="layui-form-item">
                <label for="L_username" class="layui-form-label">工号</label>
                <div class="layui-input-inline">
                    <input type="text" id="L_username" asp-for="UserName" required lay-verify="required" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_realname" class="layui-form-label">姓名</label>
                <div class="layui-input-inline">
                    <input type="text" id="L_realname" asp-for="RealName" required lay-verify="required" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_pass" class="layui-form-label">密码</label>
                <div class="layui-input-inline">
                    <input type="password" id="L_pass" asp-for="Password" required lay-verify="required" autocomplete="off" class="layui-input">
                </div>
                <div class="layui-form-mid layui-word-aux">6到16个字符</div>
            </div>
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">确认密码</label>
                <div class="layui-input-inline">
                    <input type="password" id="L_repass" asp-for="ConfirmPassword" required lay-verify="required" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_email" class="layui-form-label">邮箱</label>
                <div class="layui-input-inline">
                    <input type="text" id="L_email" asp-for="Email" required lay-verify="email" autocomplete="off" class="layui-input">
                </div>
                <div class="layui-form-mid layui-word-aux">若无邮箱请填写pi@longi-silicon.com</div>
            </div>

            <div class="layui-form-item">
                <label for="L_email" class="layui-form-label">部门</label>
                <div class="layui-input-inline">
                    <select id="txt_search_department" class="layui-input" id="L_email" asp-for="Department">
                        <option value="" selected></option>
                        <option value="技术部">技术部</option>
                        <option value="生产一组">生产一组</option>
                        <option value="生产二组">生产二组</option>
                        <option value="生产三组">生产三组</option>
                        <option value="生产管理组">生产管理组</option>
                        <option value="设备部">设备部</option>
                        <option value="质量部">质量部</option>
                        <option value="计划物控部">计划物控部</option>
                        <option value="人力资源部">人力资源部</option>
                        <option value="仓储物流部">仓储物流部</option>
                        <option value="采购履行部">采购履行部</option>
                        <option value="IE运营部">IE运营部</option>
                        <option value="财务部">财务部</option>
                        <option value="总经理办公室">总经理办公室</option>
                    </select>
                </div>
            </div>

            <div class="layui-form-item">
                <button class="layui-btn" lay-filter="*" lay-submit>立即注册</button>
            </div>
        </form>
    </div>
</div>

